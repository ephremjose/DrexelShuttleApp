<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/name_blue"
        android:id="@+id/blueButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:clickable="true"
        android:onClick="onClickBlue" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/name_dragon"
        android:id="@+id/dragonButton"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_below="@+id/blueButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentEnd="true"
        android:onClick="onClickDragon"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/name_queens"
        android:id="@+id/queenButton"
        android:layout_below="@+id/dragonButton"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dragonButton"
        android:background="@android:color/holo_green_dark"
        android:layout_alignEnd="@+id/dragonButton"
        android:onClick="onClickQueen"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/favorite"
        android:id="@+id/button4"
        android:layout_below="@+id/queenButton"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/queenButton"
        android:background="@android:color/holo_purple"
        android:layout_alignEnd="@+id/queenButton"
        android:onClick="showFavorite"/>

</RelativeLayout>
